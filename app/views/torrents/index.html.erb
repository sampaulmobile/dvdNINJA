<h1>Recent Torrents</h1>

<table border="1">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date Added</th>
      <th>URL</th>
    </tr>
  </thead>

  <tbody>
    <% @torrents.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.created_at %></td>
        <td><%= link_to "magnet", t.magnet_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

